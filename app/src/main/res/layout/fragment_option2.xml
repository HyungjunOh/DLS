        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품"
            android:textSize="24sp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textSize="24sp"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp" />

        <EditText
            android:id="@+id/opt_2_content"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="9dp"
            android:ems="10"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:text="취소"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/button"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/opt_2_content"
            android:layout_marginStart="54dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입력"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/opt_2_content"
            android:layout_marginLeft="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="70dp" />

        <TextView
            android:id="@+id/opt_2_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            android:text="TextView"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/opt_2_csl_eT"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/opt_2_time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:text="TextView"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/opt_2_date"
            app:layout_constraintTop_toBottomOf="@+id/opt_2_csl_eT"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/opt_2_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="23dp"
            android:text="상품을 선택해주세요."
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/opt_2_btn_product"
            app:layout_constraintTop_toBottomOf="@+id/opt_2_date"
            android:layout_marginStart="2dp" />

        <Button
            android:id="@+id/opt_2_btn_product"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="상품 선택"
            app:layout_constraintLeft_toRightOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/opt_2_date"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/opt_2_cmpN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/opt_2_csl_eT"
            app:layout_constraintTop_toBottomOf="@+id/opt_2_etTitle"
            android:layout_marginStart="8dp" />

        <ListView
            android:id="@+id/opt_2_nameListView"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/opt_2_csl_eT"
            app:layout_constraintVertical_bias="1.0" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/opt_2_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="#99000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.19">

            <ProgressBar
                android:id="@+id/progressBar2"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.19999999" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:text="Loading..."
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressBar2" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
